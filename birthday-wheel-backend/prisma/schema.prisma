generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model QrToken {
  id          String            @id @default(uuid())
  code        String            @unique
  description String?
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  sessions    UserSpinSession[]
}

model User {
  id        String            @id @default(uuid())
  name      String
  phone     String            @unique
  email     String
  storeName String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  sessions  UserSpinSession[]
}

model UserSpinSession {
  id         String    @id @default(uuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  tokenId    String
  token      QrToken   @relation(fields: [tokenId], references: [id])
  hasSpun    Boolean   @default(false)
  spunAt     DateTime?
  wonPrizeId Int?
  prize      Prize?    @relation(fields: [wonPrizeId], references: [id])
  createdAt  DateTime  @default(now())

  @@unique([userId, tokenId])
}

model Prize {
  id              Int               @id @default(autoincrement())
  name            String
  description     String?
  imageUrl        String?
  color           String?
  price           Decimal           @db.Decimal(10, 2)
  stock           Int               @default(0)
  initialStock    Int               @default(0)
  weight          Decimal           @default(1.00) @db.Decimal(10, 2)
  isActive        Boolean           @default(true)
  isLoss          Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  winningSessions UserSpinSession[]
}
